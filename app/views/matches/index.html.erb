<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Winner</th>
      <th>Loser</th>
      <th>Date</th>
      <th>Winner balls</th>
      <th>Loser balls</th>
      <th>Foul</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.group %></td>
        <td><%= match.winner %></td>
        <td><%= match.loser %></td>
        <td><%= match.date %></td>
        <td><%= match.winner_balls %></td>
        <td><%= match.loser_balls %></td>
        <td><%= match.foul %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

